<div class="card">
    <h2 class="card-header">Edit Post</h2>
    <form class="card-body">
        <div>
            <label class="form-label">Title:</label>
            <input class="input" type="text" name="post-title" value="{{post.name}}" />
        </div>

        <div>
            <label class="form-label">Content:</label>
            <textarea class="text-area input" name="post-body" data-number="8">{{post.description}}</textarea>
        </div>

        <button class="btn btn-primary" type="submit">EDIT</button>
        <input type="hidden" name="post-id" value="{{post.id}}" />
    </form>
    <div class="card-body">
   <button class="btn btn-primary" type="click" id="delete-btn">DELETE</button>
  </div>
</div>
